{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "width": 800,
  "height": 800,
  "background": "#eef2e8",
  "padding": {"top": 0, "left": 0, "right": 0, "bottom": 0},
  "signals": [
    {
      "name": "minYearSignal",
      "value": -2500,
      "bind": {
        "input": "range",
        "min": -2500,
        "max": 2000
      }
    },
    {
      "name": "maxYearSignal",
      "value": 2100,
      "bind": {
        "input": "range",
        "min": -2500,
        "max": 2100
      }
    }
  ],
  "data": [
    {
      "name": "battles",
      "url": "http://localhost:3000/data",
      "format": "json"
    }
  ],
  "scales": [
    {
      "name": "xYearScale",
      "type": "linear",
      "domain":{
        "data": "battles",
        "field": "year"
      },
      "domainMin": {"signal": "minYearSignal"},
      "domainMax": {"signal": "maxYearSignal"},
      "range": "width",
      "clamp":true
    },
    {
      "name": "yCountryScale",
      "type": "point",
      "domain": {"data": "battles", "field": "countryLabel"},
      "range": "height"
    }
  ],
  "axes": [
    {"orient": "bottom", "scale": "xYearScale"},
    {"orient": "left", "scale": "yCountryScale"}
  ],
  "projections": [],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "battles"
      },
      "encode": {
        "enter": {
          "stroke": { "value": "#A32299" }
        },
        "update": {
          
          "x": {
            "scale": "xYearScale",
            "field": "year"
          },
          "y": {
            "scale": "yCountryScale",
            "field": "countryLabel"
          }
        }
      }
    }
  ]
}